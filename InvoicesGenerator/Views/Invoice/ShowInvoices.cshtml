@model IEnumerable<InvoicesGenerator.ViewModels.InvoiceFormViewModel>
<hr />
<br />
<div class="row">
    <div class="col-lg-12">
        <form class="form-inline" action="@Url.Action("ShowFilteredInvoices", "Invoice")">
            <div class="form-group">
                <label class="sr-only" for="inputCompanyName">Company name</label>
                <input type="text" class="form-control col-lg-6" id="inputCompanyName" name="CompanyName"
                       placeholder="Enter company name" value="@ViewBag.Filtered">
            </div>
            <button type="submit" class="btn btn-default">Search</button>
        </form>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <caption>Table of existing clients</caption>
            <thead>
                <tr>
                    <th>@Html.ActionLink("Invoice number", "ShowInvoices", "Invoice", new { sortOrder = "invoiceNumber", CompanyName = ViewBag.Filtered }, null)</th>
                    <th>@Html.ActionLink("Company Name", "ShowInvoices", "Invoice", new { sortOrder = "companyName", CompanyName = ViewBag.Filtered }, null)</th>
                    <th>@Html.ActionLink("Invoice date", "ShowInvoices", "Invoice", new { sortOrder = "invoiceDate", CompanyName = ViewBag.Filtered }, null)</th>
                    <th>@Html.ActionLink("Total charge", "ShowInvoices", "Invoice", new { sortOrder = "totalCharge", CompanyName = ViewBag.Filtered }, null)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChargeTotal)
                    </td>
                    <td>
                        @Html.ActionLink("Excel", "DownloadExcel", "Invoice", new { invoiceId = item.InvoiceId }, null)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>